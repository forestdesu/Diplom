<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Diplom" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:statusBarColor">@color/second</item>
        <item name="android:windowBackground">@color/main</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogTheme</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnSurface">#000000</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense</item>
    </style>

    <style name="Theme.Diplom" parent="Base.Theme.Diplom" />
</resources>